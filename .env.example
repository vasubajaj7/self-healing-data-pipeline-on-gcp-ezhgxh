# Self-Healing Data Pipeline Environment Configuration
###############################################################################
# This example file contains configuration templates for the self-healing data
# pipeline. Copy this file to ".env" and customize for your environment.
# IMPORTANT: Never commit your actual .env file to version control.
###############################################################################

# General Application Settings
APP_ENV=development            # Options: development, staging, production
APP_DEBUG=True                 # Enable debug mode
APP_LOG_LEVEL=INFO             # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_CONFIG_PATH=./configs/default_config.yaml

# Google Cloud Platform Settings
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
GCP_SERVICE_ACCOUNT_KEY_PATH=./service-account-key.json

# BigQuery Settings
BIGQUERY_DATASET=self_healing_pipeline
BIGQUERY_LOCATION=us-central1
BIGQUERY_RESERVATION_ID=       # Optional: for dedicated slots

# Cloud Storage Settings
GCS_BUCKET_PREFIX=self-healing-pipeline
GCS_STAGING_BUCKET=self-healing-pipeline-staging
GCS_DATA_BUCKET=self-healing-pipeline-data
GCS_BACKUP_BUCKET=self-healing-pipeline-backup

# Cloud Composer Settings
COMPOSER_ENVIRONMENT=self-healing-pipeline
COMPOSER_LOCATION=us-central1

# Vertex AI Settings
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_REGISTRY=self-healing-models
VERTEX_AI_ENDPOINT_ID=         # Will be populated during deployment

# Self-Healing Settings
SELF_HEALING_MODE=SEMI_AUTOMATIC   # Options: AUTOMATIC, SEMI_AUTOMATIC, MANUAL
SELF_HEALING_CONFIDENCE_THRESHOLD=0.85
SELF_HEALING_MAX_RETRY_ATTEMPTS=3

# Database Settings
FIRESTORE_COLLECTION_PREFIX=self_healing_pipeline

# Notification Settings
# Microsoft Teams Webhook URLs
TEAMS_WEBHOOK_URL_CRITICAL=https://outlook.office.com/webhook/your-webhook-url-for-critical-alerts
TEAMS_WEBHOOK_URL_DEFAULT=https://outlook.office.com/webhook/your-webhook-url-for-default-alerts

# Email Notification Settings
EMAIL_SMTP_SERVER=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=True
EMAIL_USERNAME=alerts@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_SENDER=Self-Healing Pipeline <alerts@example.com>
EMAIL_RECIPIENTS=admin@example.com,engineer@example.com

# Monitoring Settings
MONITORING_ALERT_THRESHOLD_CPU=80     # Percentage
MONITORING_ALERT_THRESHOLD_MEMORY=85  # Percentage
MONITORING_ALERT_THRESHOLD_DISK=90    # Percentage
MONITORING_METRICS_EXPORT_INTERVAL=60 # Seconds

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
API_SECRET_KEY=generate-a-secure-random-key
API_CORS_ORIGINS=*

# Web Application Settings
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=15000              # Milliseconds
VITE_AUTH_ENABLED=true
VITE_WEBSOCKET_URL=ws://localhost:8000/ws
VITE_LOG_LEVEL=info
VITE_REFRESH_INTERVAL=30000         # Milliseconds

# Feature Flags
VITE_FEATURE_FLAG_ENABLE_WEBSOCKETS=true
VITE_FEATURE_FLAG_ENABLE_NOTIFICATIONS=true
VITE_FEATURE_FLAG_ENABLE_DARK_MODE=true
VITE_FEATURE_FLAG_ENABLE_ANALYTICS=false
VITE_FEATURE_FLAG_ENABLE_ADVANCED_CHARTS=true

# External Service Integration
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_ENDPOINT=https://api.example.com/v1

# Test Settings
TEST_ENV=development
TEST_GCP_PROJECT_ID=your-test-project-id
TEST_RESOURCE_PREFIX=shp-test
TEST_USE_MOCKS=true

# Development Settings (ignored in production)
DEV_MOCK_SERVICES=False     # Use mock services instead of real backends
DEV_SAMPLE_DATA=False       # Load sample data for development
VITE_ENABLE_MOCK_API=false  # Use mock API responses in frontend
VITE_FEATURE_FLAG_ENABLE_DEBUG_TOOLS=false  # Enable debug tools in UI